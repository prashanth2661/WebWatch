{
  "manifest_version": 3,
  "name": "Website Time Tracker & Exam Mode",
  "version": "1.0",
  "description": "Track website access time and enable exam mode",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "webNavigation",
    "windows",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}